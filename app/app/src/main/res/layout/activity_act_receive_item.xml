<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceiveItem">

    <Spinner
        android:id="@+id/spn_waitingItems"
        android:layout_width="348dp"
        android:layout_height="48dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/txt_serialNum"
        android:layout_width="347dp"
        android:layout_height="48dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="30dp"
        android:hint="Serial Number"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_itemDetails" />

    <Button
        android:id="@+id/btn_printLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="Print Label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_serialNum" />

    <Button
        android:id="@+id/btn_saveItemReceive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Receive Item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_printLabel" />

    <TextView
        android:id="@+id/txt_itemDetails"
        android:layout_width="350dp"
        android:layout_height="215dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="30dp"
        android:clickable="false"
        android:text="Item Details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spn_waitingItems" />
</androidx.constraintlayout.widget.ConstraintLayout>